{{#each products as |product|}}

<!-- this is the handlebars for products when the page loads. Products will
be displayed, through this mechanism, on the landingPage -->
<tr>

<td><img class="thumbnail" src={{product.img_url}}></img></td>
 <td><p>{{product.name}}</p></td>
 <td><p>{{product.price}}</p></td>
 <td><p>{{product.category}}</p></td>
 <td><p>{{product.description}}</p></td>
 <td><p>{{product.rating}}</p></td>


<!-- Add to cart form with a hidden input that contains the product id and an input
for quanity. When submitted, this form will trigger a function to add the
item with the specified quanity to the shopping cart -->

<td>
  <form class="addToCart">
    <fieldset>
      <input min="0" max="999" class='text-field' type="number" name='quantity' value="1">
      <input value="{{product.id}}" class='text-field' type="hidden" name='id'><br> <br>
      <input value="{{product.id}}" class='text-field' type="hidden" name='price'><br> <br>
      <button class="btn btn-primary btn-lg" type="submit">Add to Cart</button>
    </fieldset><br>
    <div></div>
  </form>


</td>
</tr>


{{/each}}
